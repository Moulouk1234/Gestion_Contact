<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/dialog_background"
    android:padding="20dp"
    android:gravity="center"
    android:elevation="10dp"
    >

    <TextView
        android:id="@+id/contenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter nouveau Contact"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#BABAB7"

        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/txt"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
         />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Donner votre Nom"
        android:inputType="textPersonName"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/txtphone"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero Telephone"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
     />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="donner votre numÃ©ro"
        android:inputType="phone"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:background="@drawable/button_logout"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter Contact"
            android:background="@drawable/button_logout"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</LinearLayout>
